<%- include('partials/header') %>

 <div class="container ">
    <div class="row addUserBox ">
        <div class="addUserFrom">
            <form class="col-lg-5 m-auto border shadow" action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data"> 
                <div class="d-flex justify-content-center bg-success">
                    <div>
                        <h1 class="text-light">Edit User (<%= user.name %>)</h1>
                    </div>
                </div>
                <div class="p-5 ">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" aria-describedby="emailHelp" value="<%= user.name %>">
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" value="<%= user.email %>">
                      </div>
                      <div class="mb-3">
                          <label for="phone" class="form-label">Phone</label>
                          <input type="tel" name="phone" class="form-control" value="<%= user.phone %>">
                      </div>
                      <div class="mb-5">
                        <label for="image" class="form-label">Select Image</label>
                        <input type="file" name="image" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                        <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                      </div>
                      <input type="hidden" name="old_image" value="<%= user.image %>">
                      <button type="submit" name="submit" class="btn btn-success w-100">Update User</button>
                </div>
              </form>
        </div>
    </div>
 </div> 

<%- include('partials/footer') %>